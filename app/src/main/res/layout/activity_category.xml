<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".CategoryActivity"
    android:background="@drawable/bg_small">
    <TextView android:text="Categories" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txv_categories"
        android:textColor="#000000"
        android:textSize="20dp"
        android:padding="8dp"
        android:paddingBottom="12dp"
        android:layout_marginBottom="12dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/txv_categories"
        android:layout_alignParentEnd="true"
        android:layout_margin="0dp"
        android:gravity="top|left|start">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:id="@+id/imgv_catBir"
            android:layout_gravity="top"
            android:src="@drawable/birthday_style"
            android:padding="0dp"
            android:onClick="onImageClick"
            android:layout_marginBottom="8dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:id="@+id/imgv_catWed"
            android:layout_gravity="top"
            android:src="@drawable/wedding_style"
            android:onClick="onImageClick"
            android:layout_marginBottom="8dp" />
    </LinearLayout>


</RelativeLayout>
