<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.katie.test.ModelChoose"
    android:id="@+id/relativeLayout1"
    android:background="@drawable/bg_small">

    <TextView android:text="Select a Theme" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txv_selectATheme"
        android:textColor="#000000"
        android:textSize="20dp"
        android:padding="8dp"
        android:paddingBottom="12dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txv_selectATheme"
        android:id="@+id/linearLayout1">

        <ImageView
            android:layout_width="420dp"
            android:layout_height="231dp"
            android:id="@+id/imgv_ThemeBir1"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/thebirthofrobert"
            android:onClick="onImageClick" />
    </LinearLayout>

</RelativeLayout>
